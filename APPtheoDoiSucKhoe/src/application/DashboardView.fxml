<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane style="-fx-background-color: #f8fafc;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DashboardController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="30.0" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="40.0">
            <children>
                <VBox alignment="CENTER" prefWidth="100.0" spacing="5.0">
                    <children>
                        <Text fx:id="welcomeText" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome back!" textAlignment="CENTER" wrappingWidth="580.0">
                            <font>
                                <Font name="System Bold" size="36.0" />
                            </font>
                        </Text>
                        <Text fill="#6b7280" strokeType="OUTSIDE" strokeWidth="0.0" text="Here is a summary of your most recent health entry." textAlignment="CENTER" wrappingWidth="450.0">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Text>
                    </children>
                </VBox>
                <VBox fx:id="noDataBox" alignment="CENTER" managed="false" style="-fx-border-color: #e2e8f0; -fx-border-radius: 12; -fx-background-color: white; -fx-background-radius: 12;" visible="false">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="No Data Yet">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Text>
                        <Text fill="#6b7280" strokeType="OUTSIDE" strokeWidth="0.0" text="Go to the Data Entry section to log your first health metric." textAlignment="CENTER" wrappingWidth="300.0" />
                    </children>
                    <padding>
                        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                    </padding>
                </VBox>
                <VBox fx:id="dataBox" spacing="20.0">
                    <children>
                        <Label fx:id="lastEntryDateText" style="-fx-font-weight: bold; -fx-font-size: 14;" text="Last entry on: YYYY-MM-DD" textFill="#374151" />
                        <HBox spacing="25.0">
                            <children>
                                <VBox style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 4);" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Weight" textFill="#6b7280">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="weightText" text="- kg">
                                            <font>
                                                <Font name="System Bold" size="32.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                                <VBox style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 4);" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Blood Pressure" textFill="#6b7280">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="bloodPressureText" text="- / -">
                                            <font>
                                                <Font name="System Bold" size="32.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                                <VBox style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 4);" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Hours Slept" textFill="#6b7280">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="sleepText" text="- hrs">
                                            <font>
                                                <Font name="System Bold" size="32.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>